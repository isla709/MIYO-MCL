<Window x:Name="wd_Window" x:Class="MIYO_MCL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIYO_MCL"
        xmlns:pu="https://opensource.panuon.com/wpf-ui"
        xmlns:mui="http://schemas.modernwpf.com/2019"
        xmlns:ws="https://schemas.elecho.dev/wpfsuite"
        mc:Ignorable="d"
        Title="MIYO Minecraft Launcher"  mui:TitleBar.Foreground="{DynamicResource ThemeBrush_FontColor1}"
        Height="500" Width="800" MinHeight="400" MinWidth="800" 
        mui:WindowHelper.UseModernWindowStyle="True" 
        WindowStyle="ThreeDBorderWindow"
        WindowStartupLocation="CenterScreen" Closed="WindowX_Closed" Loaded="WindowX_Loaded" Background="{DynamicResource ThemeBrush_MainBackGround}" Foreground="{DynamicResource ThemeBrush_FontColor1}">
    
    <Window.Resources>
        <!-- 模板1：显示 Id、Type、ReleaseTime -->
        <DataTemplate x:Key="InstallPage0Template">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Id}" />
                <TextBlock Grid.Column="2" Text="{Binding Type}" />
                <TextBlock Grid.Column="4" Text="{Binding ReleaseTime}" />
            </Grid>
        </DataTemplate>

        <!-- 模板2：显示 ForgeVersion、McVersion、ModifiedTime -->
        <DataTemplate x:Key="InstallForgePage1Template">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding ForgeVersion}" />
                <TextBlock Grid.Column="2" Text="{Binding McVersion}" />
                <TextBlock Grid.Column="4" Text="{Binding ModifiedTime}" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="InstallFabricPage1Template">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding BuildVersion}" />
                <TextBlock Grid.Column="2" Text="{Binding McVersion}" />
                <TextBlock Grid.Column="4" Text="{Binding ModLoaderType}" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="InstallQuiltPage1Template">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding BuildVersion}" />
                <TextBlock Grid.Column="2" Text="{Binding McVersion}" />
                <TextBlock Grid.Column="4" Text="{Binding LauncherMeta}" />
            </Grid>
        </DataTemplate>

        <local:InstallForgeTemplateSelector 
            x:Key="slt_InstallForgeTemplateSelector"
            IF0="{StaticResource InstallPage0Template}"
            IF1="{StaticResource InstallForgePage1Template}" />

        <local:InstallFabricTemplateSelector 
            x:Key="slt_InstallFabricTemplateSelector"
            IF0="{StaticResource InstallPage0Template}"
            IF1="{StaticResource InstallFabricPage1Template}" /> 
        
        <local:InstallFabricTemplateSelector 
            x:Key="slt_InstallQuiltTemplateSelector"
            IF0="{StaticResource InstallPage0Template}"
            IF1="{StaticResource InstallQuiltPage1Template}" /> 

    </Window.Resources>
   
    <Grid>
        <TabControl 
            x:Name="tc_leftplane"
            Background="{x:Null}"
            TabStripPlacement="Left"
            BorderBrush="{DynamicResource ThemeBrush_FontColor1}"
            BorderThickness="0,1,0,0"
            FontFamily="{StaticResource PanuonIconFont}"
            
            
            
            pu:TabControlHelper.CornerRadius="0,0,0,0"
            pu:TabControlHelper.HeaderPanelAlignment="Stretch"
            pu:TabControlHelper.HeaderPanelMargin="0,0,0,0"
            pu:TabControlHelper.ItemsBackground="Transparent"
            pu:TabControlHelper.ItemsHorizontalHeaderAlignment="Left"
            pu:TabControlHelper.ItemsHoverForeground="{StaticResource ThemeBrush_SelectedColor}"
            pu:TabControlHelper.ItemsPadding="20,0,0,0"
            pu:TabControlHelper.ItemsRibbonLineCornerRadius="4"
            pu:TabControlHelper.ItemsRibbonLineMargin="0,5,0,5"
            pu:TabControlHelper.ItemsSelectedRibbonLineThickness="2"
            
            
            pu:TabControlHelper.ItemsWidth="80" 
            pu:TabControlHelper.ItemsHeight="40"
            pu:TabControlHelper.ItemsFontSize="14"
            pu:TabControlHelper.ItemsHoverBackground="{x:Null}"
            pu:TabControlHelper.ItemsSelectedBackground="{x:Null}"
            pu:TabControlHelper.ItemsForeground="{DynamicResource ThemeBrush_UnSelectedColor}"
            pu:TabControlHelper.ItemsSelectedForeground="{DynamicResource ThemeBrush_SelectedColor}"
            pu:TabControlHelper.ItemsSelectedRibbonLineBrush="{DynamicResource ThemeBrush_SelectedColor}"
            pu:TabControlHelper.ItemsRibbonLineVisibility="Visible"
            pu:TabControlHelper.ItemsRibbonLineThickness="3"
            pu:TabControlHelper.HeaderPanelBorderBrush="{DynamicResource ThemeBrush_UnSelectedColor}"
            pu:TabControlHelper.HeaderPanelBorderThickness="0,0,1,0">

            <TabItem Header= "&#xe942; 主页" >
                <Grid Background="{DynamicResource ThemeBrush_MainBackGround}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="536*"/>
                        <ColumnDefinition Width="177"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="407*"/>
                        <RowDefinition Height="72"/>
                    </Grid.RowDefinitions>

                    <Border x:Name="comp_mainBackground" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="-2,-2,-2,-2">
                        <Border.Background>
                            <ImageBrush x:Name="image_mainBackground" Stretch="UniformToFill" ImageSource="/Asset/Image/IMG01.png"/>
                        </Border.Background>
                    </Border>

                    <!--自定义面板-->
                    <Grid Grid.Column="0" Grid.Row="0">

                    </Grid>

                    <!--天气面板-->
                    <Grid Grid.Column="1" Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="157"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border x:Name="comp_Weather" Background="#AA000000" CornerRadius="20" Margin="15,0,15,0" Height="118" VerticalAlignment="Center" Grid.Row="0">
                            <Canvas>
                                <TextBlock x:Name="tb_Weather_Status" Text="Loading..." Foreground="White" Canvas.Left="20" Canvas.Top="57" HorizontalAlignment="Left" VerticalAlignment="Center" Width="104" FontFamily="AniMe Matrix - MB_EN" TextAlignment="Center" />
                                <TextBlock x:Name="tb_Weather_Temp" Text="" Foreground="White" Canvas.Left="40" Canvas.Top="34" Width="32" FontFamily="AniMe Matrix - MB_EN" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                <TextBlock x:Name="tb_Weather_Icon" Text="" Foreground="White" FontSize="20" Canvas.Left="82" Canvas.Top="30" Width="26" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="{StaticResource QWeatherIcons}" />
                                <TextBlock x:Name="tb_Weather_City" Text="" Foreground="White" Canvas.Left="20" Canvas.Top="79" Width="104" FontFamily="Arial" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="9" />
                            </Canvas>
                        </Border>

                        <Border x:Name="comp_Notice" Background="#88000000" CornerRadius="20" Margin="15,10,15,25" Grid.Row="1" Visibility="Hidden">
                            <Canvas>

                            </Canvas>
                        </Border>

                    </Grid>

                    <!--启动面板-->
                    <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="311"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="182"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="#AA000000" Margin=" -3,0,-3,-3" Grid.ColumnSpan="3"/>
                        <TextBlock x:Name="tb_SystemTime" Text="xxxx/xx/xx xx:xx" Foreground="White" FontSize="20" Margin="14,22,0,18" HorizontalAlignment="Left" Width="284" FontFamily="AniMe Matrix - MB_EN" ToolTip="当前系统时间"/>
                        <TextBlock x:Name="tb_GameVision" Text="x.xx.x" Grid.Column="1" Margin="0,26,10,26" FontFamily="AniMe Matrix - MB_EN" Foreground="White" FontSize="12" TextAlignment="Right" FontStyle="Italic" HorizontalAlignment="Right" Width="200" ToolTip="当前选择的游戏版本"/>
                        <Grid Grid.Column="2" Grid.Row="0" Margin="5,7,5,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150*"/>
                                <ColumnDefinition Width="25*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btn_StartGame" Content="StartGame" Grid.Column="0" Margin="0,0,1,0" pu:ButtonHelper.ClickEffect="Sink" Background="#36AAF7" Foreground="White" pu:ButtonHelper.CornerRadius="5" FontSize="14" FontFamily="AniMe Matrix - MB_EN" Click="btn_StartGame_Click" ToolTip="启动游戏"/>
                            <Button x:Name="btn_switchTover1" pu:ButtonHelper.Icon="&#xe9da;" pu:IconHelper.FontFamily="{StaticResource PanuonIconFont}" pu:IconHelper.Margin="0" pu:IconHelper.FontSize="10" Grid.Column="1" Margin="1,0,0,0" pu:ButtonHelper.ClickEffect="Sink" Background="#36AAF7" Foreground="White" pu:ButtonHelper.CornerRadius="5" Click="btn_switchTover1_Click" ToolTip="切换到版本列表"/>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header= "&#xe9da; 版本" >

                <TabControl TabStripPlacement="Top"
                    Margin="-2"
                    BorderThickness="0"
                    Background="{DynamicResource ThemeBrush_MainBackGround}"
                    pu:TabControlHelper.ItemsFontFamily="{StaticResource iconfont}"
                    pu:TabControlHelper.ItemsWidth="90" 
                    pu:TabControlHelper.ItemsHeight="25"
                    pu:TabControlHelper.ItemsFontSize="14"
                    pu:TabControlHelper.ItemsBackground="{DynamicResource ThemeBrush_MainBackGround}"
                    pu:TabControlHelper.ItemsSelectedBackground="{DynamicResource ThemeBrush_MainBackGround}"
                    pu:TabControlHelper.ItemsForeground="{DynamicResource ThemeBrush_UnSelectedColor}"
                    pu:TabControlHelper.ItemsSelectedForeground="{DynamicResource ThemeBrush_SelectedColor}"
                    pu:TabControlHelper.ItemsSelectedRibbonLineBrush="{DynamicResource ThemeBrush_SelectedColor}"
                    pu:TabControlHelper.ItemsRibbonLineVisibility="Visible"
                    pu:TabControlHelper.ItemsRibbonLinePlacement="Top"
                    pu:TabControlHelper.ItemsRibbonLineThickness="3"
                    pu:TabControlHelper.HeaderPanelBorderBrush="{DynamicResource ThemeBrush_UnSelectedColor}"
                    pu:TabControlHelper.HeaderPanelBorderThickness="0,0,0,1">

                    <TabItem Header="&#xf0161; 版本列表">

                        <Grid Margin="-2">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="64"/>
                            </Grid.RowDefinitions>
                            <ListBox x:Name="lb_verList" Grid.Row="0" BorderThickness="0,0,0,1" Loaded="lb_verList_Loaded">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Id}" />
                                            <TextBlock Grid.Column="1" Text=" " />
                                            <TextBlock Grid.Column="2" Text="{Binding Version}" />
                                            <TextBlock Grid.Column="3" Text=" " />
                                            <TextBlock Grid.Column="4" Text="{Binding Type}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Grid Grid.Row="1" Background="{DynamicResource ThemeBrush_MainBackGround}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="103"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="204"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Foreground="{DynamicResource ThemeBrush_FontColor1}" Text="当前选择：" Margin="6,20,7,20" FontSize="18" Grid.Column="0"/>

                                <Grid Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="32*"/>
                                        <RowDefinition Height="32*"/>
                                    </Grid.RowDefinitions>
                                    <Button x:Name="btn_changeselectver" Content="更改到选中项"  Grid.Row="0" Margin="5,5,5,5" pu:ButtonHelper.ClickEffect="Sink" pu:ButtonHelper.CornerRadius="2" Background="#FF499DC8" Foreground="White" Click="btn_changeselectver_Click" ToolTip="切换到已选择的游戏版本"/>
                                    <Button x:Name="btn_resourceChecker" Content="执行资源检查"  Grid.Row="1" Margin="5,5,5,5" pu:ButtonHelper.ClickEffect="Sink" pu:ButtonHelper.CornerRadius="2" Background="#FF499DC8" Foreground="White" IsEnabled="True" Click="Btn_resourceChecker_OnClick" ToolTip="验证游戏资源完整性"/>
                                </Grid>
                                <TextBlock Foreground="{DynamicResource ThemeBrush_FontColor1}" x:Name="tb_selectverName" Text="" Margin="10,20,10,20" FontSize="18" Grid.Column="1" TextAlignment="Center" ToolTip="当前选择的游戏版本"/>
                            </Grid>
                        </Grid>
                    </TabItem>
                </TabControl>


            </TabItem>


            <TabItem Header= "&#xe9a2; 下载" >

                <TabControl TabStripPlacement="Top"
                    Margin="-2"
                    BorderThickness="0"
                    Background="{DynamicResource ThemeBrush_MainBackGround}"
                    pu:TabControlHelper.ItemsFontFamily="{StaticResource iconfont}"
                    pu:TabControlHelper.ItemsWidth="90" 
                    pu:TabControlHelper.ItemsHeight="25"
                    pu:TabControlHelper.ItemsFontSize="14"
                    pu:TabControlHelper.ItemsBackground="{DynamicResource ThemeBrush_MainBackGround}"
                    pu:TabControlHelper.ItemsSelectedBackground="{DynamicResource ThemeBrush_MainBackGround}"
                    pu:TabControlHelper.ItemsForeground="{DynamicResource ThemeBrush_UnSelectedColor}"
                    pu:TabControlHelper.ItemsSelectedForeground="{DynamicResource ThemeBrush_SelectedColor}"
                    pu:TabControlHelper.ItemsSelectedRibbonLineBrush="{DynamicResource ThemeBrush_SelectedColor}"
                    pu:TabControlHelper.ItemsRibbonLineVisibility="Visible"
                    pu:TabControlHelper.ItemsRibbonLinePlacement="Top"
                    pu:TabControlHelper.ItemsRibbonLineThickness="3"
                    pu:TabControlHelper.HeaderPanelBorderBrush="{DynamicResource ThemeBrush_UnSelectedColor}"
                    pu:TabControlHelper.HeaderPanelBorderThickness="0,0,0,1">

                    <TabItem Header="Vanilla">

                        <Grid Margin="-2">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="64"/>
                            </Grid.RowDefinitions>
                            <ListBox x:Name="lb_installVanilla" Grid.Row="0" BorderThickness="0,0,0,1" Loaded="lb_installVanllia_Loaded" SelectionChanged="lb_installVanllia_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Id}" />
                                            <TextBlock Grid.Column="1" Text=" " />
                                            <TextBlock Grid.Column="2" Text="{Binding Type}" />
                                            <TextBlock Grid.Column="3" Text=" " />
                                            <TextBlock Grid.Column="4" Text="{Binding ReleaseTime}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Grid Grid.Row="1" Background="{DynamicResource ThemeBrush_MainBackGround}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="103"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="204"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Foreground="{DynamicResource ThemeBrush_FontColor1}" Text="当前选择：" Margin="6,20,7,20" FontSize="18" Grid.Column="0"/>

                                <Grid Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="32*"/>
                                        <RowDefinition Height="32*"/>
                                    </Grid.RowDefinitions>
                                    <Button x:Name="btn_installver" Content="安装"  Grid.Row="0" Margin="5,16,10,16" pu:ButtonHelper.ClickEffect="Sink" pu:ButtonHelper.CornerRadius="2" Background="#FF499DC8" Foreground="White" Click="btn_installver_Click" Grid.RowSpan="2" ToolTip="安装"/>
                                </Grid>
                                <TextBlock x:Name="tb_selectedInstall" Foreground="{DynamicResource ThemeBrush_FontColor1}" Text="" Margin="10,20,10,20" FontSize="18" Grid.Column="1" TextAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Forge" IsEnabled="True">

                        <Grid Margin="-2">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="64"/>
                            </Grid.RowDefinitions>
                            <ListBox x:Name="lb_installForge" Grid.Row="0" BorderThickness="0,0,0,1" Loaded="lb_installForge_Loaded" MouseDoubleClick="lb_installForge_MouseDoubleClick" ItemTemplateSelector="{StaticResource slt_InstallForgeTemplateSelector}" SelectionChanged="lb_installForge_SelectionChanged">

                            </ListBox>
                            <Grid Grid.Row="1" Background="{DynamicResource ThemeBrush_MainBackGround}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="103"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="204"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Foreground="{DynamicResource ThemeBrush_FontColor1}" Text="当前选择：" Margin="6,20,7,20" FontSize="18" Grid.Column="0"/>

                                <Grid Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25*"/>
                                        <ColumnDefinition Width="26*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="32*"/>
                                        <RowDefinition Height="32*"/>
                                    </Grid.RowDefinitions>
                                    <Button x:Name="btn_forgeinstall" Content="安装" Margin="6,16,10,16" pu:ButtonHelper.ClickEffect="Sink" pu:ButtonHelper.CornerRadius="2" Background="#FF499DC8" Foreground="White" Grid.Column="1" Grid.RowSpan="2" Click="btn_forgeinstall_Click" ToolTip="安装"/>
                                    <Button x:Name="btn_forgeinstall_back" Content="返回"  Grid.Row="0" Margin="10,16,10,16" pu:ButtonHelper.ClickEffect="Sink" pu:ButtonHelper.CornerRadius="2" Background="Gray" Foreground="White" Click="btn_forgeinstall_back_Click" Grid.RowSpan="2" ToolTip="返回上一级"/>
                                </Grid>
                                <TextBox x:Name="tb_selectedforgeVer" Foreground="{DynamicResource ThemeBrush_FontColor1}" Text="" Margin="10,20,10,20" FontSize="18" Grid.Column="1" TextAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </TabItem>


                    <TabItem Header="Fabric" IsEnabled="True">

                        <Grid Margin="-2">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="64"/>
                            </Grid.RowDefinitions>
                            <ListBox x:Name="lb_installFabric" Grid.Row="0" BorderThickness="0,0,0,1" ItemTemplateSelector="{StaticResource slt_InstallFabricTemplateSelector}" Loaded="lb_installFabric_Loaded" MouseDoubleClick="lb_installFabric_MouseDoubleClick" SelectionChanged="lb_installFabric_SelectionChanged">

                            </ListBox>
                            <Grid Grid.Row="1" Background="{DynamicResource ThemeBrush_MainBackGround}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="103"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="204"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Foreground="{DynamicResource ThemeBrush_FontColor1}" Text="当前选择：" Margin="6,20,7,20" FontSize="18" Grid.Column="0"/>

                                <Grid Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25*"/>
                                        <ColumnDefinition Width="26*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="32*"/>
                                        <RowDefinition Height="32*"/>
                                    </Grid.RowDefinitions>
                                    <Button x:Name="btn_fabricinstall" Content="安装" Margin="6,16,10,16" pu:ButtonHelper.ClickEffect="Sink" pu:ButtonHelper.CornerRadius="2" Background="#FF499DC8" Foreground="White" Grid.Column="1" Grid.RowSpan="2" Click="btn_fabricinstall_Click" ToolTip="安装"/>
                                    <Button x:Name="btn_fabricinstall_back" Content="返回"  Grid.Row="0" Margin="10,16,10,16" pu:ButtonHelper.ClickEffect="Sink" pu:ButtonHelper.CornerRadius="2" Background="Gray" Foreground="White" Click="btn_fabricinstall_back_Click" Grid.RowSpan="2" ToolTip="返回上一级"/>
                                </Grid>
                                <TextBox x:Name="tb_selectedfabricVer" Foreground="{DynamicResource ThemeBrush_FontColor1}" Text="" Margin="10,20,10,20" FontSize="18" Grid.Column="1" TextAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </TabItem>

                    <TabItem Header="Quilt" IsEnabled="True">

                        <Grid Margin="-2">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="64"/>
                            </Grid.RowDefinitions>
                            <ListBox x:Name="lb_installQuilt" ItemTemplateSelector="{StaticResource slt_InstallQuiltTemplateSelector}" Grid.Row="0" BorderThickness="0,0,0,1" Loaded="lb_installQuilt_OnLoaded" MouseDoubleClick="Lb_installQuilt_OnMouseDoubleClick" SelectionChanged="Lb_installQuilt_OnSelectionChanged"> 

                            </ListBox>
                            <Grid Grid.Row="1" Background="{DynamicResource ThemeBrush_MainBackGround}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="103"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="204"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Foreground="{DynamicResource ThemeBrush_FontColor1}" Text="当前选择：" Margin="6,20,7,20" FontSize="18" Grid.Column="0"/>

                                <Grid Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25*"/>
                                        <ColumnDefinition Width="26*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="32*"/>
                                        <RowDefinition Height="32*"/>
                                    </Grid.RowDefinitions>
                                    <Button x:Name="btn_Quiltinstall" Content="安装" Margin="6,16,10,16" pu:ButtonHelper.ClickEffect="Sink" pu:ButtonHelper.CornerRadius="2" Background="#FF499DC8" Foreground="White" Grid.Column="1" Grid.RowSpan="2" Click="Btn_Quiltinstall_OnClick" ToolTip="安装"/>
                                    <Button x:Name="btn_Quiltinstall_back" Content="返回"  Grid.Row="0" Margin="10,16,10,16" pu:ButtonHelper.ClickEffect="Sink" pu:ButtonHelper.CornerRadius="2" Background="Gray" Foreground="White" Click="Btn_Quiltinstall_back_OnClick" Grid.RowSpan="2" ToolTip="返回上一级"/>
                                </Grid>
                                <TextBox x:Name="tb_selectedQuiltVer" Foreground="{DynamicResource ThemeBrush_FontColor1}" Text="" Margin="10,20,10,20" FontSize="18" Grid.Column="1" TextAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </TabItem>


                </TabControl>

            </TabItem>

            <TabItem Header= "&#xe990; 设置" >
                <Grid Background="{DynamicResource ThemeBrush_MainBackGround}" Margin="-2,-2,-2,-2">
                    <ws:ScrollViewer>
                        <StackPanel>

                            <Border Background="{DynamicResource ThemeBrush_CompBackGround}" CornerRadius="5" Height="100" Margin="20,10,10,10">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="1" Opacity="0.3"/>
                                </Border.Effect>

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>


                                <StackPanel Margin="5">
                                    <TextBlock Text="主页背景" FontWeight="Bold" Foreground="{DynamicResource ThemeBrush_FontColor2}" Margin="5"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="预设：" Foreground="{DynamicResource ThemeBrush_FontColor2}" Margin="20,5,5,5" Grid.Column="0"/>
                                        <ComboBox x:Name="cb_mainBackground" Margin="5,5,10,5" Width="Auto" Grid.Column="1" 
                                              pu:ComboBoxHelper.CornerRadius="2"
                                              pu:ComboBoxHelper.OpenedCornerRadius="4,4,0,0"
                                              BorderBrush="LightGray" BorderThickness="1"
                                              pu:ComboBoxHelper.WatermarkForeground="Gray"
                                              pu:ComboBoxHelper.ItemsHoverBackground="#22000000" pu:ComboBoxHelper.ItemsSelectedBackground="#FF000000" pu:ComboBoxHelper.ItemsSelectedForeground="#FFFFFF"
                                              pu:DropDownHelper.ShadowColor="#36AAF7" pu:ComboBoxHelper.OpenedShadowColor="#36AAF7"
                                              pu:ShadowHelper.BlurRadius="15" pu:ShadowHelper.ShadowDepth="5"
                                              pu:DropDownHelper.BorderThickness="0" pu:DropDownHelper.CornerRadius="0,0,4,4" pu:DropDownHelper.VerticalOffset="-1" SelectionChanged="cb_mainBackground_SelectionChanged">

                                            <ComboBoxItem Content="IMG01"/>
                                            <ComboBoxItem Content="IMG02"/>
                                            <ComboBoxItem Content="IMG03"/>
                                            <ComboBoxItem Content="IMG04"/>
                                            <ComboBoxItem Content="IMG05"/>
                                            <ComboBoxItem Content="IMG06"/>
